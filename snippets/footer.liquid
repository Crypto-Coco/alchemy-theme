<footer class="footer">
  <div class="footer-top">
    <div class="footer-left">
      <h2 class="footer-title">{{ settings.footer_title }}</h2>
      <p class="footer-description">{{ settings.footer_description }}</p>
    </div>

    <div class="footer-right">
      <h3 class="footer-right-text">{{ settings.footer_right_text }}</h3>

      <div class="footer-links">
        <a href="{{ settings.opensea_link }}" target="_blank">
          {% render 'opensea-icon', fill_color: settings.footer_color %}
        </a>
        <a href="{{ settings.twitter_link }}" target="_blank">
          {% render 'twitter-icon', fill_color: settings.footer_color %}
        </a>
        <a href="{{ settings.discord_link }}" target="_blank">
          {% render 'discord-icon', fill_color: settings.footer_color %}
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p class="footer-copyright">{{ settings.footer_copyright }}</p>
  </div>
</footer>

<style>
  .footer {
    padding-top: 80px;
    background: #EDEDFF;
  }

  .footer-top {
    padding: 0 var(--margin-main-dekstop);
    padding-bottom: 64px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--line-primary);
  }

  .footer-left {
    width: 60%;
  }

  .footer-title {
    color: {{ settings.footer_color }};
    font-size: 48px;
    font-weight: 700;
  }

  .footer-description {
    font-size: 20px;
    font-weight: 400;
    margin-top: 48px;
  }

  .footer-right-text {
    font-size: 28px;
    text-align: center;
    color: {{ settings.footer_color }};
    margin-bottom: 32px;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 32px;
  }

  .footer-bottom {
    padding: 24px 0;
  }

  .footer-copyright {
    text-align: center;
  }
</style>