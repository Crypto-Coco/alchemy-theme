<div class="faq-block" id="faq-block">
  <div class="question">
    <h3 class="question-text">
      {{ question }}
    </h3>

    <button class="open-close-button">
      <img src="{{ 'chevron-down.svg' | asset_url }}" class="open-close-icon" />
    </button>
  </div>

  <div class="answer" id="answer">
    <p class="answer-text">
      {{ answer  }}
    </p>
  </div>
</div>

<style>
  .faq-block {
    margin-bottom: 10px;
    border-bottom: 1px solid var(--line-primary);
  }

