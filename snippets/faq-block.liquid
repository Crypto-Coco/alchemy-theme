    padding: 8px;
    align-items: center;
    margin-bottom: 24px;
    border-radius: var(--rounded-md);
  }

  .question:hover {
    cursor: pointer;
    background-color: rgba(64, 64, 64, 0.10);
  }

  .question-text {
    font-size: 24px;
    font-weight: 500;
    width: 100%;
  }

  .open-close-button {
    background: transparent;
    border: none;
    cursor: pointer;
    border-radius: 999px;
    width: 30px;
    height: 30px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }

  .open-close-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .open-close-icon.open {
    transform: rotate(180deg);
  }

  .answer {
    display: none;
    margin-bottom: 24px;
    padding: 0 16px;
  }

  .answer-text {
    margin: 0;
    font-size: 16px;
