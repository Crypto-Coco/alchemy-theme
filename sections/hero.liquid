<section class="hero">
  {%- comment -%}TODO: Imageも対応{%- endcomment -%}
  <div class="hero-video-cover"></div>

  <div class="hero-video-container">
    <video
      autoplay
      loop
      playsinline
      muted
      poster="https://image.mux.com/jaQzSff8YZIIfVjYM3RRAkGeZf02yOLUETPxPw4ZTAs4/thumbnail.jpg?auto=format&amp;dpr=1&amp;w=2560"
      class="hero-video">
      <source src="https://stream.mux.com/jaQzSff8YZIIfVjYM3RRAkGeZf02yOLUETPxPw4ZTAs4/high.mp4" type="video/mp4">
    </video>
  </div>

  <div class="hero-txt-container">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.description }}</p>
  </div>
</section>

<style>
  .hero {
    min-height: calc(41.6vw);
    margin-top: -82px;
    position: relative;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-video-cover {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    background-color: rgba(0, 0, 0, 0.6);
    height: 100%;
    width: 100%;
  }

  .hero-video-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    height: 100%;
    min-width: 100%;
    padding-top: 0;
    width: 177.778vh;
    min-height: 56.25vw;
    max-width: none;
  }

  .hero-txt-container {
    position: relative;
    z-index: 3;
  }

  .hero-txt-container h1 {
    color: white;
    text-align: center;
    font-family: Holtwood One SC;
    font-size: 54px;
    margin-bottom: 50px;
  }

  .hero-txt-container p {
    color: #FFF;
    text-align: center;
    font-family: Hoefler Text;
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
  }
</style>



{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Skyborne - Nexian Gems"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Nexian Gems is a Proof of Collective within the Skyborne Legacy ecosystem."
      }
    ]
  }
{% endschema %}